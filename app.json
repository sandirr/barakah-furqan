{
  "expo": {
    "name": "Barakah Furqan",
    "slug": "barakah-furqan",
    "version": "1.0.1",
    "orientation": "default",
    "icon": "./assets/images/icon-barakah.png",
    "scheme": "barakahfurqan",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "buildNumber": "2",
      "supportsTablet": true,
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "Allow $(PRODUCT_NAME) to use speech recognition.",
        "NSMicrophoneUsageDescription": "Allow $(PRODUCT_NAME) to use the microphone.",
        "LSApplicationQueriesSchemes": ["itms-apps"]
      },
      "bundleIdentifier": "com.barakah.furqan"
    },
    "android": {
      "versionCode": 2,
      "adaptiveIcon": {
        "backgroundColor": "#059669",
        "foregroundImage": "./assets/images/icon-barakah.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.barakah.furqan",
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon-barakah.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#059669",
          "dark": {
            "backgroundColor": "#059669"
          }
        }
      ],
      "expo-audio",
      "expo-speech-recognition",
      [
        "expo-notifications",
        {
          "sounds": [
            "./assets/adzan.mp3"
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
